<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292b2c"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".DodavanjeKolegija">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unos novog kolegija"
        android:textAlignment="center"
        android:textColor="#F7F7F7"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60sp"
        android:text="Naziv kolegija"
        android:textAlignment="center"
        android:textColor="#F7F7F7"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etNazivKolegija1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#f7f7f7"
        android:ems="10"
        android:hint="naziv kolegija"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#F7F7F7"
        android:textColorHint="#F7F7F7" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dozvoljen broj izostanaka"
        android:textAlignment="center"
        android:textColor="#F7F7F7"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etBrojIzostanaka1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#f7f7f7"
        android:ems="10"
        android:hint="dozvoljen broj izostanaka"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColor="#F7F7F7"
        android:textColorHint="#F7F7F7" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Način izvođenja nastave"
        android:textAlignment="center"
        android:textColor="#F7F7F7"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spNaciniIzvodenja1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:textAlignment="center"
        android:textSize="20sp"

        />

    <Button
        android:id="@+id/btnUnosKolegija1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0AD4E"
        android:enabled="true"
        android:text="Unos novog kolegija" />
</LinearLayout>