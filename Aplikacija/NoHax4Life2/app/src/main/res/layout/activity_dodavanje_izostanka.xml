<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292B2C"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".DodavanjeIzostanka">

    <TextView
        android:id="@+id/tvIzostanakNazivKolegija"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NWTIS"
        android:textAlignment="center"
        android:textColor="#F7F7F7"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvIzostanakNacinIzvodenjaNastave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Predavanje"
        android:textAlignment="center"
        android:textColor="#F7F7F7" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trenutni broj izostanaka"
        android:textAlignment="center"
        android:textColor="#F7F7F7"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvIzostanakBrojIzostanaka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0/3"
        android:textAlignment="center"
        android:textColor="#F7F7F7"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Razlog izostanka:"
            android:textColor="#F7F7F7" />

        <EditText
            android:id="@+id/etIzostanakRazlogIzostanka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#F7F7F7"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:textColor="#F7F7F7"
            android:textColorHint="#F7F7F7" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="126dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Datum izostanka:"
            android:textColor="#F7F7F7" />

        <TextView
            android:id="@+id/tvDatumIzostanka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dodaj datum izostanka"
            android:textColor="#F7F7F7"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnDodajIzostanak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0AD4E"
        android:enabled="false"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Dodaj izostanak"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewIzostanci"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp" />

</LinearLayout>