<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvRazlogIzostanka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_marginEnd="7dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="2dp"
            android:text="Naziv kolegija"
            android:textAlignment="textEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvDatumIzostanka"
            android:layout_toStartOf="@id/tvRazlogIzostanka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="3/3"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="36sp"
            />

        <TextView
            android:id="@+id/tvNacinIzvodenja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRazlogIzostanka"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="6dp"
            android:text="Predavanje" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>